<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.msopengles">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="com.example.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MSOpenGLES">

        <activity android:name="com.example.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name="com.example.video.VideoPlayByMediaCodecActivity"
            android:exported="false" />
        <activity android:name=".LiveCameraActivity" />
        <activity
            android:name="com.example.video.MSVideoMenuActivity"
            android:exported="false" />
        <activity
            android:name=".activity.CommonActivity"
            android:exported="false" />
        <activity
            android:name=".OpenGLESMenuActivity"
            android:exported="true">

        </activity>
    </application>

</manifest>